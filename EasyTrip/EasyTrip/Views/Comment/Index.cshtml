@using EasyTrip.Models.Classes
@model List<Comment>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h5 class="card-title text-primary text-left">Yorum Listesi</h5>
            <br />
           
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead>
                        <tr class="bg-primary text-white">
                            <th scope="col" class="text-center">Kullanıcı Adı</th>
                            <th scope="col">Mail</th>
                            <th scope="col">Yorum</th>
                            <th scope="col">Blog</th>
                            <th scope="col" class="text-center">Sil</th>
                            <th scope="col" class="text-center">Güncelle</th>
                          
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var comment in Model)
                        {
                            <tr>
                                <td class="fw-bold">@comment.Username</td>
                                <td class="fw-bold">@comment.Mail</td>
                                <td class="fw-bold">@comment.Comments</td>
                                <td class="fw-bold">@comment.Blog.Title</td>

                                <td class="text-center">
                                    <a href="/Comment/DeleteComment/@comment.CommentId" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/Comment/UpdateComment/@comment.CommentId" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Güncelle
                                    </a>
                                </td>
                              
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

