
@using EasyTrip.Models.Classes
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-lg-12 mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h5 class="card-title text-primary text-left">Hakkımızda </h5>
            <br />

            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead>
                        <tr class="bg-primary text-white">
                            <th scope="col" class="text-center">Resim</th>
                            <th scope="col">Açıklama</th>
                            
                            <th scope="col" class="text-center">Sil</th>
                            <th scope="col" class="text-center">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var comment in Model)
                        {
                            <tr>
                               <td class="text-center">
                                   <img src="@comment.ImageUrl" alt="Blog Resmi"
                                        style="width: 100px; height: 100px; border: 2px solid #ccc; border-radius: 8px;">
                               </td>
                                <td class="fw-bold">@comment.Description</td>
                               

                                <td class="text-center">
                                    <a href="/About/DeleteAbout/@comment.AboutId" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/About/UpdateAbout/@comment.AboutId" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Güncelle
                                    </a>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

