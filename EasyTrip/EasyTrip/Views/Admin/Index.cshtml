@using EasyTrip.Models.Classes
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 mt-4">
    <div class="card shadow">
        <div class="card-body">
            <h5 class="card-title text-primary text-left">Blog Listesi</h5>
            <br />
            <td class="text-center">
                <a href="/Admin/Create/" class="btn btn-primary">
                    Yeni Blog Ekle
                </a>
            </td>
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead>
                        <tr class="bg-primary text-white">
                            <th scope="col" class="text-center">Resim</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Tarih</th>
                            <th scope="col" class="text-center">Sil</th>
                            <th scope="col" class="text-center">Güncelle</th>
                            <th scope="col" class="text-center">Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="@blog.BlogImgUrl" alt="Blog Resmi"
                                         style="width: 80px; height: 50px; border: 2px solid #ccc; border-radius: 8px;">
                                </td>
                                <td class="fw-bold">@blog.Title</td>
                                <td>@blog.Date.ToString("dd MMM yyyy")</td>
                                <td class="text-center">
                                    <a href="/Admin/Delete/@blog.BlogId" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/Edit/@blog.BlogId" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Güncelle
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a href="/Admin/Details/@blog.BlogId" class="btn btn-success btn-sm">
                                        Detaylar
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
