@model EasyTrip.Models.Classes.Blog
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Detayları</h2>

<div class="card">
    <div class="card-body">
        <h3>@Model.Title</h3>
        <img src="@Model.BlogImgUrl" alt="Blog Resmi" class="img-fluid" />
        <p><strong>Açıklama:</strong> @Model.Description</p>
        <p><strong>Tarih:</strong> @Model.Date.ToString("dd MMM yyyy")</p>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">Geri</a>
    </div>
</div>
